header {
	margin-top:20px;
	line-height:40px
}
header h1 {
	width:40%
}
header nav ul {
	float:left;
	list-style:none;
	width:55%;
	font-size:.9em;
	padding-top:5px
}
header nav li {
	float:right;
	padding:5px
}
header nav li.line {
	width:10px
}
header nav li a {
	text-decoration:none;
	color:#333
}
.maincontainer {
	background: url("/account/images/background_ie.jpg") no-repeat scroll center center #0d96e7;
	background-size:cover;
    clear: both;
    width: 100%;
	margin-bottom:10px;
}
.mainwrapper {
    height: 100%;
	*margin-bottom:30px;
}
.article {
	overflow:auto;
	width:930px;
	margin:30px auto;
	_margin-bottom:0;
	border-top:4px solid #06c;
	background:#fff;
	padding:30px;
	*padding-bottom:0;
	_padding-bottom:20px
}
.signupbox {
	float:left;
	width:70%;
	border-right:1px solid #ddd
}
.article h1 {
	background:none;
	color:#333;
	margin-top:0;
	padding:0;
	font-size:2.2em;
	line-height:60px;
	_margin-bottom:0
}
.signupbox p {
	line-height:30px
}
form{
	overflow:hidden
}
form .entry {
	line-height:40px;
	font-size:14px;
	margin-bottom:15px;
	_margin:0;
	clear:both
}
form label {
	float:left;
	display:inline-block;
	width:85px
}
form .captchaarea {
	float:left
}
form .text {
	float:left;
	font-size:12px;
	line-height:20px
}
form .agree {
	clear:both;
	font-size:1em;
	padding-top:10px;
	padding-left:80px;
	overflow:hidden;
	height:16px;
	line-height:16px;
}
form .button {
	line-height:60px;
	padding-left:84px;
	margin-top:10px
}
.button span {
	float:right;
	width:auto;
	display:block;
	margin-right:50px;
	font-size:1.5em
}
.button input {
	float:left;
	background:#fa8715;
	border:0;
	color:#fff;
	height:45px;
	margin-top:10px;
	margin-bottom:10px;
	font-size:1.5em;
	font-weight:bold
}
form .entry span.forget {
	float:right;
	line-height:30px;
	font-size:1.2em
}
form input {
	float:left;
	width:200px;
	padding:12px 5px;
	margin-right:15px;
	display:inline-block
}
input#captcha {
	float:left;
	width:150px;
}
input.newsletter {
	float:left;
	width:16px;
	margin-right:5px;
	padding:0
}
.prompt {
	color:red;
	clear:both
}
.prompt ul {
	padding-left:15px;
	margin-bottom:0
}
.prompt ul li {
	line-height:20px;
	font-size:1.2em
}
a:hover {
	color:#F00;
	text-decoration:underline
}
.aside {
	float:left;
	width:30%;
	font-size:.9em
}
.signupbox center {
	text-align:center;
	margin:0;
	_margin-bottom:5px;
	padding:0;
	height:60px;
	line-height:60px;
	font-size:1.6em
}
.rightside img{
	margin:70px 0 50px 25px
}
