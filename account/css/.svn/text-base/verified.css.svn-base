header {
	margin-top:20px;
	line-height:40px
}
header h1 {
	width:40%
}
header nav ul {
	float:left;
	list-style:none;
	width:55%;
	font-size:.9em;
	padding-top:5px
}
header nav li {
	float:right;
	padding:5px
}
header nav li.line {
	width:10px
}
header nav li a {
	text-decoration:none;
	color:#333
}
.maincontainer {
	width:100%;
	clear:both;
	background:#d1e5fd;
	margin-bottom:20px
}
.article {
	background: #fff;
    border-top: 4px solid #06c;
    margin: 30px 0;
    overflow: auto;
    padding: 30px 0 20px;
	*padding-right:30px;
    width: 100%;
	text-align:center
}
.article h1 {
	margin-bottom:0;
	background:none;
	padding:0
}
.article h2 {
	font-size:1.5em
}
.article .info{
	width:990px;
	*margin-bottom:30px;
	_margin-bottom:30px;
}
.article .info span {
	display:block;
	float:left;
	margin:0 217px 30px 100px;
	_margin:0 260px 30px 48px;
	font-size:.9em;
	color:#999
}
.article .info .last {
	margin-right:0
}
.article p {
	clear:both;
	line-height:40px;
	margin:0;
	padding:0
}
.article p a:hover{
	color:red
}
.article p span {
	margin-right:15px
}
.article p.special {
	color:red
}
.article time {
	margin-right:10px
}
#resendmail {
	margin-top:30px
}
#resendmail input {
	height:30px;
	line-height:30px;
	margin-right:15px
}
#resendmail input#email {
	width:280px
}
#resendmail input#resend {
	width:100px;
	height:38px
}