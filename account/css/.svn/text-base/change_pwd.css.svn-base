header {
	margin-top:20px;
	line-height:40px
}
header h1 {
	width:40%
}
header nav ul {
	float:left;
	list-style:none;
	width:55%;
	font-size:.9em;
	padding-top:5px
}
header nav li {
	float:right;
	padding:5px
}
header nav li.line {
	width:10px
}
header nav li a {
	text-decoration:none;
	color:#333
}
.maincontainer {
	width:100%;
	clear:both;
	background:#d1e5fd;
	margin-bottom:20px
}
.article {
	overflow:auto;
	width:990px;
	margin:30px auto;
	border-top:4px solid #06c;
	background:#fff;
	padding:30px;
	padding-bottom:20px;
	font-size:14px
}
.article form{
	width:950px;
	margin:30px 0
}	
.article input {
	height:30px;
	line-height:30px;
	margin-right:15px
}
.article input#email {
	width:280px
}
.article input#reset {
	background: none repeat scroll 0 0 #0479d6;
    border: 0 none;
    color: white;
    font-size: 14px;
    font-weight: bold;
    height: 38px;
    margin-left: 175px;
    width: 155px;
}
label {
	display: inline-block;
    width: 170px;
}
